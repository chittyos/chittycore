{
  "name": "@chittyos/core",
  "version": "2.0.0",
  "description": "ChittyOS Core - Essential package with ID, auth, verification, beacon tracking, and brand components for all ChittyOS applications",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./beacon": "./dist/beacon/index.js",
    "./auth": "./dist/auth/index.js",
    "./id": "./dist/id/index.js",
    "./verify": "./dist/verify/index.js",
    "./brand": "./dist/brand/index.js",
    "./canon": "./dist/canon/index.js",
    "./registry": "./dist/registry/index.js",
    "./chittychat": "./dist/chittychat/index.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "chittyos",
    "core",
    "authentication",
    "beacon",
    "tracking",
    "identity",
    "verification",
    "brand"
  ],
  "author": "ChittyOS",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/chittyos/chittycore"
  },
  "dependencies": {
    "eventemitter3": "^5.0.1",
    "jose": "^5.2.0",
    "nanoid": "^5.0.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.1",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}